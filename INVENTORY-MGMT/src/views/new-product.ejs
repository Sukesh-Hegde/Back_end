<!-- views/add-product.ejs -->

<h1 class="mt-5 mb-4 header" >Add New Product</h1>
<!-- display error mssage if any of the blanks are not filled properly -->
<%if(errorMessage){%>
<div class="alert alert-danger" role="alert">
    <%= errorMessage %>
</div>
<%}%>

<form action="/" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="name" class="form-label">Product Name</label>
        <input type="text" class="form-control" id="name" name="name" required>
    </div>
    <div class="mb-3">
        <label for="desc" class="form-label">Product Description</label>
        <textarea class="form-control" id="desc" name="desc" rows="3" required></textarea>
    </div>
    <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input type="number" class="form-control" id="price" name="price" step="0.01" min="0" required>
    </div>
    <div class="mb-3">
        <label for="imageUrl" class="form-label">Image URL</label>

        <!-- to upload a file from local storage -->
        <input type="file" name="imageUrl" id="imageUrl" accept="image/*">
    </div>
    <button type="submit" class="btn btn-primary">Add Product</button>
</form>